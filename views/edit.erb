<form action='/edit/<%= @student.id%>' method='post'>

  <label for="first_name"> First Name: </label>
  <input type="text" name="first_name" id="first_name" value="<%= @student.first_name.capitalize %>">
<br>
  <label for="last_name"> Last Name: </label>
  <input type="text" name="last_name" id="last_name" value="<%= @student.last_name.capitalize %>">
<br>
  <label for="age"> Age: </label>
  <input type="text" name="age" id="age" value="<%= @student.age %>">
<br>
  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select" value="<%= @student.house_id %>">

    <option value="1" <%= "selected" if @student.house.name == "gryffindor" %> >Gryffindor</option>
    <option value="2" <%= "selected" if @student.house.name == "hufflepuff" %> >Hufflepuff</option>
    <option value="3" <%= "selected" if @student.house.name == "ravenclaw" %> >Ravenclaw</option>
    <option value="4" <%= "selected" if @student.house.name == "slytherin" %> >Slytherin</option>
  </select>
<br>
<input type="submit" value="Put on the Sorting Hat">

</form>
